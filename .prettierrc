{
  "trailingComma": "all",
  "printWidth": 120,
  "singleQuote": true,
  "arrowParens": "avoid",
  "semi": true,
  "quoteProps": "as-needed",
  "bracketSpacing": true,
  "proseWrap": "never",
  "endOfLine": "auto",

  "importOrder": [
    "^@(.*)$",
    "^src/data/(.*)$",
    "^src/utils/(.*)$",
    "^src/api/(.*)$",
    "^src/models/(.*)$",
    "^src/components/(.*)$",
    "^src/content/(.*)$",
    "^src/(.*)$",
    "./(.*)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
